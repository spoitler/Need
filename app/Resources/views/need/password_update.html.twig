{% extends 'base.html.twig' %}

{% block body %}

    <h3 class="title-homme">Mon compte \ Modification mot de passe</h3>

    <a href="{{ path('need_user') }}"><p class="item-back-user title-homme"><img id="arrow-left-user" src="{{ asset('img/arrow-left.png') }}">Revenir à mon compte</p></a>


    <form class="container-form-update-info-user">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="title-user-info" for="new-password"> Nouveau mot de passe</label>
                <input type="password" id="new-password" class="form-control" required>
            </div>
            <div class="form-group col-md-6">
                <label class="title-user-info" for="confirm-new-password">Confirmation nouveau mot de passe</label>
                <input type="password" id="confirm-new-password" class="form-control" required>
            </div>
        </div>
        <button type="submit" class="btn btn-primary submit-btn-contact">Mettre à jour</button>
    </form>

{% endblock %}

{% block stylesheets %}{% endblock %}

