{% block title %}
    Liste des produits
{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
        {%  dump(arrayProduits) %}
            <th>Titre</th>
            <th>Genre</th>
            <th>Année</th>
            <th>Résumé</th>
            <th width="120"></th>
        </thead>
    <tbody>
    {% for produit in arrayProduits %}
        <tr id="{{  produit.idProduit }}">
            <td id="titre">{{ produit.description }}</td>
            <td>{{ produit.idGenre }}</td>
            <td>{{ produit.description }}</td>
            <td>{{ produit.description}}</td>
{#            <td><a class="btn btn-primary btn-sm" href="{{ path('film_edit', { 'id': produit.idProduit }) }}" title="Modifier le film">#}
{#                    <i class="fa fa-edit" aria-hidden="true"></i>&nbsp;Modifier</a>#}
{#            </td>#}
        </tr>
    {% else %}
        <tr>
            <td colspan="5">Aucun film n'a été trouvé.</td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
{% endblock %}