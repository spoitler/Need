{% extends 'base.html.twig' %}

{% block body %}

    <h3 class="title-homme">Mon compte \ Général</h3>

    <a href="{{ path('need_user') }}"><p class="item-back-user title-homme"><img id="arrow-left-user" src="{{ asset('img/arrow-left.png') }}">Revenir à mon compte</p></a>

    <form class="container-form-update-info-user">
        <fieldset class="form-group form-user-info">
            <div class="row">
                <legend class="col-form-label col-sm-2 pt-0 title-user-info align-user">Titre</legend>
                <div class="col-sm-10 align-user">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="Femme" checked>
                        <label class="form-check-label" for="gridRadios1">
                            Femme
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="Homme">
                        <label class="form-check-label " for="gridRadios2">
                            Homme
                        </label>
                    </div>
                    <div class="form-check disabled">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="Non communiqué">
                        <label class="form-check-label" for="gridRadios3">
                            Non communiqué
                        </label>
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="title-user-info" for="name-user">Nom</label>
                <input type="text" id="name-user" class="form-control" required>
            </div>
            <div class="form-group col-md-6">
                <label class="title-user-info" for="surname-user">Prénom</label>
                <input type="text" id="surname-user" class="form-control" required>
            </div>
        </div>
        <div class="form-group">
            <label class="title-user-info" for="inputEmail-userr">Email</label>
            <input type="email" class="form-control" id="inputEmail-user" required>
        </div>
        <div class="form-group">
            <label class="title-user-info" for="naissance-userr">Date de naissance</label>
            <input type="date" class="form-control" id="naissance-user" required>
        </div>
        <button type="submit" class="btn btn-primary submit-btn-contact">Mettre à jour</button>
    </form>

{% endblock %}

{% block stylesheets %}{% endblock %}

